<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    >

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEFC9"
    >

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/thumbnail"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/thumbnail"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="2"
        android:lines="2"
        android:text="@+id/label"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#c000"
        android:textSize="16sp"
        />

    <!--<TextView-->
        <!--android:id="@+id/author"-->
        <!--android:layout_width="75dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignLeft="@+id/article_title"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignStart="@+id/article_title"-->
        <!--android:layout_below="@+id/article_title"-->
        <!--android:alpha="1"-->
        <!--android:fontFamily="sans-serif-condensed"-->
        <!--android:textAllCaps="true"-->
        <!--android:textColor="#6000"-->
        <!--android:textSize="14sp"-->
        <!--android:layout_marginBottom="16dp"/>-->

    <TextView
        android:id="@+id/publish_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_title"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:alpha="1"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="true"
        android:textColor="#6000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/article_title"
        android:layout_marginBottom="16dp"
        android:layout_alignRight="@+id/article_title"
        android:layout_below="@+id/article_title"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#6000"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/comment_count_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/article_title"
        android:layout_toLeftOf="@+id/comment_count"
        android:layout_toStartOf="@+id/comment_count"
        android:contentDescription="@string/comment_count"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="16dp"

        android:src="@drawable/comment_count_icon" />

</RelativeLayout>
</android.support.v7.widget.CardView>