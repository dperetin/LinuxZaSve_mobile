<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:contentDescription="@string/thumbnail" />

    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/thumbnail"
        android:layout_toRightOf="@id/thumbnail"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="2"
        android:text="@+id/label"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#c000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/author"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/article_title"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/article_title"
        android:layout_below="@+id/article_title"
        android:layout_marginBottom="5dp"
        android:alpha="1"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="true"
        android:textColor="#6000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/publish_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/article_title"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@id/author"
        android:layout_toRightOf="@id/author"
        android:alpha="1"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#6000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/article_title"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/article_title"
        android:layout_below="@+id/article_title"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#6000"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/comment_count_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/article_title"
        android:layout_toLeftOf="@+id/comment_count"
        android:layout_toStartOf="@+id/comment_count"
        android:contentDescription="@string/comment_count"
        android:fontFamily="sans-serif-condensed"
        android:src="@drawable/comment_count_icon" />

</RelativeLayout>