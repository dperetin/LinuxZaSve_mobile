<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

<TextView
    android:id="@+id/crta"
    android:layout_width="5dp"
    android:layout_height="fill_parent"
    android:background="#FFaabbcc"
    android:visibility="visible" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp" >

    <TextView
        android:id="@+id/autor_komentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tekst_komentar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/autor_komentar"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/datum_komentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/autor_komentar"
        android:layout_below="@+id/tekst_komentar"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="3dp"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="true"
        android:textColor="#6000"
        android:textSize="12sp" />

</RelativeLayout>
</LinearLayout>